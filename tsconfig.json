{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "preact.h",
    "jsxFragmentFactory": "preact.Fragment",
    "module": "es2020",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "build",
    "strict": true,
    "target": "es2020",
    "typeRoots": ["types", "node_modules/@types"]
  },
  "exclude": ["build", "build-cjs", "examples"]
}

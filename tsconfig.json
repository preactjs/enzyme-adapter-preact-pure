{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "preact.h",
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "build",
    "strict": true,
    "target": "es5",
    "typeRoots": ["types", "node_modules/@types"]
  },
  "exclude": [
    "examples",
    "build"
  ]
}
